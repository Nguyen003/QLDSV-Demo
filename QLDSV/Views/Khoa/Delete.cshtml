@model QLDSV.Models.Khoa

@{
    ViewBag.Title = "Delete";
}

<style>
    .button {
        margin-right: 20px;
        padding: 5px 10px;
        font-size: 16px;
        text-decoration: none;
        color: #0d6efd;
        border: 1px solid #0d6efd;
        border-radius: 5px;
        text-align: center;
        transition: background 0.1s ease;
    }

    .button:hover {
        color: #fff;
        background: #0d6efd
    }
</style>

<section class="content">
    <div class="text-center">
        <h3>Bạn chắc chắn muốn xóa khoa này?</h3>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Xóa" class="btn bg-maroon button" />
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn bg-purple margin button" })
            </div>
        }
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <!-- The time line -->
            <ul class="timeline">
                <!-- timeline item -->
                <li>
                    <!-- timeline icon -->
                    <i class="fa fa-info-circle bg-blue"></i>
                    <div class="timeline-item">
                        @*<span class="time"><i class="fa fa-clock-o"></i> 12:05</span>*@
                        <h3 class="timeline-header"><a href="#">Thông tin khoa</a></h3>

                        <div class="timeline-body">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-horizontal">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.MaKhoa, htmlAttributes: new { @class = "control-label col-md-4" })
                                            <div class="col-md-8">
                                                @Html.DisplayFor(model => model.MaKhoa, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.TenKhoa, htmlAttributes: new { @class = "control-label col-md-4" })
                                            <div class="col-md-8">
                                                @Html.DisplayFor(model => model.TenKhoa, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.KiHieu, htmlAttributes: new { @class = "control-label col-md-4" })
                                            <div class="col-md-8">
                                                @Html.DisplayFor(model => model.KiHieu, new { htmlAttributes = new { @class = "form-control" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--End timeline body-->
                    </div>
                </li>
            </ul>
        </div>
        <!-- /.col -->
    </div>
</section>
