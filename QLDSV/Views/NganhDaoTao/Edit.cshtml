@model QLDSV.Models.NganhDaoTao

@{
    ViewBag.Title = "Edit";
}

<style>
    .button {
        float: right;
        margin-right: 20px;
        padding: 5px 10px;
        font-size: 16px;
        text-decoration: none;
        color: #0d6efd;
        border: 1px solid #0d6efd;
        border-radius: 5px;
        text-align: center;
        transition: background 0.1s ease;
    }

    .button:hover {
        color: #fff;
        background: #0d6efd
    }
</style>

<section class="content-header">
    <h1>
        Cập nhật thông tin
    </h1>
</section>
<hr />
<section class="content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-lg-6"><h4>Nhập thông ngành đào tạo</h4></div>
            <div class="col-lg-6">
                @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn bg-purple pull-right button" })
                <input type="submit" value="Thêm" class="btn bg-maroon pull-right button"/>
            </div>
        </div>
        <hr style="border: none;"/>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.NganhDaoTaoID)
                    <div class="form-group">
                        @Html.LabelFor(model => model.KhoaID, "Khoa", htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.DropDownList("KhoaID", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.KhoaID, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TenNganh, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-6">
                            @Html.EditorFor(model => model.TenNganh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenNganh, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

            </div>
        </div>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
